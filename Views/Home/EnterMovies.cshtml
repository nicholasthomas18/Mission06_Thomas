<h1>Enter a Film</h1>

@model Movie_Collection.Models.Film

<form method="post">
    <label asp-for="FilmCategory">Film Category:</label>
    <input asp-for="FilmCategory" required/>
    <br />

    <label asp-for="FilmTitle">Film Title:</label>
    <input asp-for="FilmTitle" required />
    <br />

    <label asp-for="FilmYear">Year:</label>
    <input asp-for="FilmYear" required />
    <br />

    <label asp-for="FilmDirector">Director:</label>
    <input asp-for="FilmDirector" required />
    <br />

    <label asp-for="FilmRating">Film Rating:</label>
    <select asp-for="FilmRating" required >
        <option value="G">G</option>
        <option value="PG">PG</option>
        <option value="PG-13">PG-13</option>
        <option value="R">R</option>
    </select>
    <br />

    <label asp-for="FilmEdited">Edited (Y/N):</label>
    <select asp-for="FilmEdited">
        <option value="true">Yes</option>
        <option value="false">No</option>
    </select>
    <br />

    <label asp-for="FilmLentTo">Lent To:</label>
    <input asp-for="FilmLentTo" />
    <br />

    <label asp-for="FilmNotes">Notes:</label>
    <input asp-for="FilmNotes" />
    <br />

    <button type="submit">Submit Film</button>
</form>